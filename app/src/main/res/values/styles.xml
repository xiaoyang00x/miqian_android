<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:buttonStyle">@style/MQ_Button</item>
        <item name="android:editTextStyle">@style/MQ_Edit</item>
        <item name="theme_background">@color/base_background</item>
        <item name="title_bar_bg">@color/mq_r1</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeSplash" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/icon_splash</item>
    </style>

    <style name="MQ_Edit" parent="android:Widget.EditText">
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MQ_Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/mq_font4_v2</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FillContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />

    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />

    <style name="wfy_title_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="com.miqian.mq:leftImage">@drawable/btn_back_selector</item>
        <item name="com.miqian.mq:leftIsBack">true</item>
        <item name="com.miqian.mq:centerTextColor">@color/white</item>
        <item name="com.miqian.mq:rightTextColor">@color/white</item>
        <item name="android:background">@color/mq_r1</item>
    </style>


    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="text_black_item" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mq_b1</item>
        <item name="android:textSize">@dimen/mq_font2</item>
    </style>

    <style name="f3_B1" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mq_b1</item>
        <item name="android:textSize">@dimen/mq_font3</item>
    </style>

    <style name="f7_B1_V2" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mq_b1_v2</item>
        <item name="android:textSize">@dimen/mq_font7_v2</item>
    </style>

    <style name="f7_B4_V2" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mq_b4_v2</item>
        <item name="android:textSize">@dimen/mq_font7_v2</item>
    </style>

    <style name="f3_B2" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mq_b2</item>
        <item name="android:textSize">@dimen/mq_font3</item>
    </style>

    <style name="f1_R1" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mq_r1</item>
        <item name="android:textSize">@dimen/mq_font1</item>
    </style>


    <style name="f9_R1_V2" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mq_r1_v2</item>
        <item name="android:textSize">@dimen/mq_font9_v2</item>
    </style>

    <style name="f3_R1_V2" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mq_r1_v2</item>
        <item name="android:textSize">@dimen/mq_font3_v2</item>
    </style>

    <style name="f3_b4_V2" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mq_b4_v2</item>
        <item name="android:textSize">@dimen/mq_font3_v2</item>
    </style>


    <style name="text_gray_item" parent="WrapContent">
        <item name="android:textColor">@color/miqian_gray</item>
        <item name="android:textSize">@dimen/mq_font2</item>
    </style>

    <style name="edittext_item" parent="FillContent">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/edit_item</item>
        <item name="android:background">@drawable/trans</item>
        <item name="android:textSize">@dimen/mq_font7_v2</item>
        <item name="android:textColor">@color/mq_b1_v2</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColorHint">@color/mq_b4_v2</item>
        <item name="android:ems">10</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/progressdialog_layout_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="listItem" parent="FillContent">
        <item name="android:paddingRight">@dimen/margin_left_right</item>
        <item name="android:paddingLeft">@dimen/margin_left_right</item>
        <item name="android:background">@drawable/list_click</item>
        <item name="android:layout_height">@dimen/listitem_height</item>
    </style>

    <style name="listItem_tv1" parent="WrapContent">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/mq_b1</item>
        <item name="android:textSize">@dimen/mq_font2</item>
    </style>

    <style name="item_divider_none" parent="FillContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/mq_b6_v2</item>
    </style>

    <style name="item_divider" parent="item_divider_none">
        <item name="android:layout_marginLeft">@dimen/margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/margin_left_right</item>
    </style>

    <style name="click_btn" parent="FillContent">
        <item name="android:layout_width">260dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mq_font1</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="click_btn_rec" parent="click_btn">
        <item name="android:textSize">@dimen/mq_font1</item>
        <item name="android:background">@drawable/btn_rec_red</item>

    </style>

    <!--定期赚item view-->
    <style name="regular_earn_item_lable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/mq_b2</item>
        <item name="android:textSize">@dimen/mq_font5</item>
    </style>

</resources>

