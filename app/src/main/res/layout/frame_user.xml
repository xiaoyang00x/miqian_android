<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/frame_title" />

    <com.miqian.mq.views.MySwipeRefresh
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frame_title"
        android:background="@color/base_background"
        android:visibility="visible">

        <ScrollView
            android:id="@+id/layout_logined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/layout_account_head" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left_right"
                    android:paddingRight="@dimen/margin_left_right">

                    <RelativeLayout
                        android:id="@+id/frame_record"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_record"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/account_record" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_record"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="资金记录"
                                android:textColor="@color/mq_b1_v2"
                                android:textSize="@dimen/mq_font8_v2"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="账目清晰明了"
                                android:textColor="@color/mq_b4_v2"
                                android:textSize="@dimen/mq_font5_v2" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/frame_invite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_invite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/account_invite" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_invite"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="邀请好友"
                                android:textColor="@color/mq_b1_v2"
                                android:textSize="@dimen/mq_font8_v2"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="好友一起赚钱"
                                android:textColor="@color/mq_b4_v2"
                                android:textSize="@dimen/mq_font5_v2" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/frame_account_current"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/list_click">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:src="@drawable/account_current" />

                    <TextView
                        style="@style/text_black_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:text="我的活期" />

                    <ImageView
                        android:id="@+id/arrow_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/account_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/arrow_1"
                        android:textColor="@color/mq_b4_v2" />
                </RelativeLayout>

                <View style="@style/item_divider" />

                <RelativeLayout
                    android:id="@+id/frame_account_miaoqianbao"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/list_click">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_miaoqianbao" />

                    <TextView
                        style="@style/text_black_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:text="我的秒钱宝" />

                    <ImageView
                        android:id="@+id/arrow_miaoqianbao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/account_miaoqianbao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/arrow_miaoqianbao"
                        android:textColor="@color/mq_b4_v2" />
                </RelativeLayout>

                <View style="@style/item_divider" />

                <RelativeLayout
                    android:id="@+id/frame_regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/list_click">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:src="@drawable/account_regular" />

                    <TextView
                        style="@style/text_black_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:text="我的定期" />

                    <ImageView
                        android:id="@+id/arrow_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/account_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/arrow_2"
                        android:textColor="@color/mq_b4_v2" />
                </RelativeLayout>

                <View style="@style/item_divider" />

                <RelativeLayout
                    android:id="@+id/frame_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/list_click">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:src="@drawable/account_ticket" />

                    <TextView
                        style="@style/text_black_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:text="红包/卡" />

                    <ImageView
                        android:id="@+id/arrow_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:src="@drawable/right" />

                    <ImageView
                        android:id="@+id/iv_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/account_ticket"
                        android:src="@drawable/qqroject"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/account_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/arrow_4"
                        android:textColor="@color/mq_b4_v2" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_record_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View style="@style/item_divider" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

            </LinearLayout>
        </ScrollView>
    </com.miqian.mq.views.MySwipeRefresh>
</RelativeLayout>