<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="可提现金额"
                android:textColor="@color/mq_b1_v2"
                android:textSize="@dimen/mq_font7_v2" />

            <TextView
                android:id="@+id/tv_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/mq_r1_v2"
                android:textSize="@dimen/mq_font7_v2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <ImageView
                android:id="@+id/iv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_tip_roolout" />

            <TextView
                android:id="@+id/tv_remain_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/iv_tip"
                android:text="本月可提现次数"
                android:textColor="@color/mq_y2_v2"
                android:textSize="@dimen/mq_font3_v2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="收款账号"
                android:textColor="@color/mq_b1_v2"
                android:textSize="@dimen/mq_font7_v2" />

            <TextView
                android:id="@+id/tv_cardnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/mq_b1_v2"
                android:textSize="@dimen/mq_font7_v2" />

            <ImageView
                android:id="@+id/iv_bankicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/tv_cardnum" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/mq_b3_v2"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="可提现金额"
                android:textColor="@color/mq_b1_v2"
                android:textSize="@dimen/mq_font7_v2" />

      <LinearLayout
          android:layout_width="0px"
          android:layout_height="0px"
          android:focusableInTouchMode="true"
          android:focusable="true"
          ></LinearLayout>

            <EditText
                android:id="@+id/et_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:background="@drawable/trans"
                android:inputType="numberDecimal"
                android:paddingRight="10dp"
                android:textColor="@color/mq_r1_v2"
                android:textColorHint="@color/mq_b3_v2"
                android:textSize="@dimen/mq_font7_v2" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/mq_b3_v2"></View>

        <RelativeLayout
            android:id="@+id/layout_bankunion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="开户行联行号"
                android:textColor="@color/mq_b1_v2"
                android:textSize="@dimen/mq_font7_v2" />

            <TextView
                android:id="@+id/tv_bankunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="220000"
                android:textColor="@color/mq_b1_v2"
                android:textSize="@dimen/mq_font7_v2"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_openbank"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_sendcaptcha_normal"
                android:text="完善银行卡信息"
                android:textColor="@color/mq_r1_v2"
                android:textSize="@dimen/mq_font7_v2"
                android:visibility="gone"></Button>
        </RelativeLayout>

        <include
            android:id="@+id/layout_below5amt"
            layout="@layout/layout_below5amt"
            android:visibility="gone"></include>

        <include
            android:id="@+id/layout_aboveamt"
            layout="@layout/layout_above5amt"
            android:visibility="gone"></include>
        <include
            android:id="@+id/layout_no_work"
            layout="@layout/layout_above5amt_no_work"
            android:visibility="gone"></include>
        <include
            android:id="@+id/layout_nobranch"
            layout="@layout/layout_above5amt_no_branch"
            android:visibility="gone"></include>

        <Button
            android:id="@+id/btn_summit"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_red"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font8_v2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="温馨提示："
                    android:textColor="@color/mq_b2_v2"
                    android:textSize="@dimen/mq_font5_v2"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_tips"
                    android:text="提现时间(周一到周日)"
                    android:textColor="@color/mq_b4_v2"
                    android:textSize="@dimen/mq_font3_v2"></TextView>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:text="1.普通提现：支持单笔5万(含5万)以下资金提现，实时到账。"
                android:textColor="@color/mq_b4_v2"
                android:textSize="@dimen/mq_font3_v2"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="2.大额提现：支持单笔5万以上资金提现。可以大额提现时间"
                android:textColor="@color/mq_b4_v2"
                android:textSize="@dimen/mq_font3_v2"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="为：工作日9：00——16：40。为避免大额提现资金锁定情况"
                android:textColor="@color/mq_b4_v2"
                android:textSize="@dimen/mq_font3_v2"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="建议拆分每笔资金，实现实时提现。"
                android:textColor="@color/mq_b4_v2"
                android:textSize="@dimen/mq_font3_v2"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="3.最低提现金额1元，每月8次免费提现，超过8次后提现收取"
                android:textColor="@color/mq_b4_v2"
                android:textSize="@dimen/mq_font3_v2"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="0.2%手续费（最低1元）。每日提现次数最多2次。"
                android:textColor="@color/mq_b4_v2"
                android:textSize="@dimen/mq_font3_v2"></TextView>

        </LinearLayout>
    </LinearLayout>


</ScrollView>