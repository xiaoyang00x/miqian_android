<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:background="@drawable/account_head_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/result_success" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_status"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="充值成功"
                android:textColor="@color/white"
                android:textSize="@dimen/mq_font6_v2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/save_wave" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                style="@style/f7_B1_V2"
                android:text="充值金额" />

            <TextView
                android:id="@+id/text_order_money"
                style="@style/f3_B1"
                android:layout_alignParentRight="true"
                android:text="--" />

        </RelativeLayout>

        <View style="@style/item_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                style="@style/f7_B1_V2"
                android:text="业务编号" />

            <TextView
                android:id="@+id/text_order_no"
                style="@style/f3_B1"
                android:layout_alignParentRight="true"
                android:textColor="@color/mq_b4_v2" />
        </RelativeLayout>

        <View style="@style/item_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                style="@style/f7_B1_V2"
                android:text="充值至" />

            <TextView
                android:id="@+id/text_bank"
                style="@style/f3_B1"
                android:layout_alignParentRight="true"
                android:textColor="@color/mq_b4_v2" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/bt_back"
                style="@style/click_btn"
                android:text="确定" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>