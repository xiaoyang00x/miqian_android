<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/account_head_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/result_success" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_status"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="充值成功"
                android:textColor="@color/white"
                android:textSize="@dimen/mq_font7_v2"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/save_wave" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                style="@style/f6_B1_V2"
                android:layout_centerVertical="true"
                android:text="充值金额" />

            <TextView
                android:id="@+id/order_money_unit"
                style="@style/f6_B1_V2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="元" />

            <TextView
                android:id="@+id/text_order_money"
                style="@style/f8_R1_V2"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/order_money_unit"
                android:text="--" />
        </RelativeLayout>

        <View style="@style/item_divider_none" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                style="@style/f6_B1_V2"
                android:layout_centerVertical="true"
                android:text="业务编号" />

            <TextView
                android:id="@+id/text_order_no"
                style="@style/f6_B1_V2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View style="@style/item_divider_none" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                style="@style/f6_B1_V2"
                android:layout_centerVertical="true"
                android:text="充值至" />

            <TextView
                android:id="@+id/text_bank"
                style="@style/f6_B1_V2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View style="@style/item_divider_none" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/bt_back"
                style="@style/click_btn"
                android:text="确定" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>