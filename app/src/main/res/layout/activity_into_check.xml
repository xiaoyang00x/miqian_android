<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="@string/into_check"
                    android:textColor="@color/mq_r1_v2"
                    android:textSize="@dimen/mq_font5_v2" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/shape_dialog_background"
                android:orientation="vertical"
                android:paddingBottom="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/mq_b1"
                        android:textSize="@dimen/mq_font5_v2"
                        android:layout_marginLeft="15dp"
                        android:text="选择转账时间" />
                </RelativeLayout>

                <View style="@style/item_divider_none" />

                <RadioGroup
                    android:id="@+id/radio_time"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:checkedButton="@+id/bt_today"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/bt_today"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableRight="@drawable/btn_radio_into"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="今天"
                        android:textColor="@color/mq_b3_v2"
                        android:textSize="@dimen/mq_font5_v2" />

                    <View style="@style/item_divider_none" />

                    <RadioButton
                        android:id="@+id/bt_yesterday"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableRight="@drawable/btn_radio_into"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="过往"
                        android:textColor="@color/mq_b3_v2"
                        android:textSize="@dimen/mq_font5_v2" />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_dialog_background"
                android:orientation="vertical"
                android:paddingBottom="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/mq_b1"
                        android:textSize="@dimen/mq_font5_v2"
                        android:layout_marginLeft="15dp"
                        android:text="选择转账渠道" />
                </RelativeLayout>

                <View style="@style/item_divider_none" />

                <RadioGroup
                    android:id="@+id/radio_channel"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:checkedButton="@+id/bt_bank"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/bt_bank"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableRight="@drawable/btn_radio_into"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="网银转账充值"
                        android:textColor="@color/mq_b3_v2"
                        android:textSize="@dimen/mq_font5_v2" />

                    <View style="@style/item_divider_none" />

                    <RadioButton
                        android:id="@+id/bt_alipay"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableRight="@drawable/btn_radio_into"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="支付宝转账充值"
                        android:textColor="@color/mq_b3_v2"
                        android:textSize="@dimen/mq_font5_v2" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/bt_confirm"
                style="@style/click_btn"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="提交" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>