<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mq_r1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_left_right"
                android:paddingRight="@dimen/margin_left_right">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">

                    <TextView
                        android:id="@+id/text_project_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/image_project_status"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="@dimen/mq_font7_v2" />


                    <ImageView
                        android:id="@+id/image_project_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:scaleType="matrix"
                        android:visibility="gone" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_capital"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="待收本金"
                            android:textColor="@color/white"
                            android:textSize="@dimen/mq_font3_v2" />

                        <TextView
                            android:id="@+id/text_capital_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/mq_font9_v2" />


                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="55dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="项目期限(天)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/mq_font3_v2" />

                        <TextView
                            android:id="@+id/text_limit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/mq_font9_v2" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="55dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="年化收益"
                            android:textColor="@color/white"
                            android:textSize="@dimen/mq_font3_v2" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_interest_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/mq_font10_v2" />

                            <TextView
                                android:id="@+id/text_interest_rate_present"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/mq_font3_v2" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="35dp">

                    <TextView
                        android:id="@+id/text_date_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="认购日期："
                        android:textColor="@color/white"
                        android:textSize="@dimen/mq_font3_v2" />

                    <TextView
                        android:id="@+id/text_date_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="到期日期："
                        android:textColor="@color/white"
                        android:textSize="@dimen/mq_font3_v2" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    style="@style/item_divider"
                    android:layout_alignParentBottom="true" />

                <RelativeLayout
                    android:id="@+id/frame_project_match"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@color/white"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_project"
                        android:textColor="@color/mq_b2_v2"
                        android:textSize="@dimen/mq_font6_v2"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="项目详情"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:src="@drawable/right" />

                    <View
                        style="@style/item_divider"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:text="还款方式"
                        android:textColor="@color/mq_b2_v2"
                        android:textSize="@dimen/mq_font6_v2" />

                    <TextView
                        android:id="@+id/text_repayment"
                        android:textColor="@color/mq_b2_v2"
                        android:textSize="@dimen/mq_font6_v2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:text="" />

                    <View
                        style="@style/item_divider"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/text_earning_type"
                        android:textColor="@color/mq_b2_v2"
                        android:textSize="@dimen/mq_font6_v2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:text="待收收益" />

                    <TextView
                        android:id="@+id/text_earning"
                        android:textColor="@color/mq_b2_v2"
                        android:textSize="@dimen/mq_font6_v2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                         />

                    <View
                        style="@style/item_divider"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

