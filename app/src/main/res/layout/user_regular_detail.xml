                <RelativeLayout
                    android:id="@+id/layout_transfer_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:visibility="gone">

                    <TextView
                        style="@style/f3_B1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:text="转让情况" />

                    <TextView
                        android:id="@+id/tv_transfered_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/arrow_tansfer"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/mq_b4_v2"
                        android:textSize="@dimen/mq_font4_v2" />

                    <ImageView
                        android:id="@+id/arrow_tansfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:src="@drawable/right" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <TextView
                        android:textColor="@color/mq_b2_v2"
                        android:textSize="@dimen/mq_font7_v2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="标的相关记录"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrow_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/tv_referrecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/arrow_detail"
                        android:text="查看全部"
                        android:textColor="@color/mq_b2_v2"
                        android:textSize="@dimen/mq_font6_v2" />


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/linear_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/arrow_detail"
                    android:layout_marginBottom="60dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <LinearLayout
                        android:id="@+id/layout_first"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_date_first"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="right"
                                android:text="3333"
                                android:textColor="@color/mq_r1_v2"
                                android:textSize="@dimen/mq_font3_v2" />

                            <!--<TextView-->
                                <!--android:id="@+id/tv_time_first"-->
                                <!--android:layout_width="150dp"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_gravity="bottom"-->
