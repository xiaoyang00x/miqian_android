<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mq_r1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_left_right"
                android:paddingRight="@dimen/margin_left_right">

                <TextView
                    android:id="@+id/text_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="计划33"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font7_v2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_capital"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="待收本金"
                            android:textColor="@color/white"
                            android:textSize="@dimen/mq_font3_v2" />

                        <TextView
                            android:id="@+id/text_capital_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/mq_font9_v2" />


                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="55dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="项目期限(天)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/mq_font3_v2" />

                        <TextView
                            android:id="@+id/text_limit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/mq_font9_v2" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="55dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="年化收益"
                            android:textColor="@color/white"
                            android:textSize="@dimen/mq_font3_v2" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_interest_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/mq_font10_v2" />

                            <TextView
                                android:id="@+id/text_interest_rate_present"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/mq_font3_v2" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="35dp">

                    <TextView
                        android:id="@+id/text_date_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="认购日期："
                        android:textColor="@color/white"
                        android:textSize="@dimen/mq_font3_v2" />

                    <TextView
                        android:id="@+id/text_date_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="到期日期："
                        android:textColor="@color/white"
                        android:textSize="@dimen/mq_font3_v2" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    style="@style/item_divider"
                    android:layout_alignParentBottom="true" />

                <RelativeLayout
                    android:id="@+id/frame_project_match"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@color/white"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_project"
                        style="@style/f3_B1"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="项目详情"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:src="@drawable/right" />

                    <View
                        style="@style/item_divider"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:text="还款方式"
                        android:textColor="@color/mq_b4_v2"
                        android:textSize="@dimen/mq_font7_v2" />

                    <TextView
                        android:id="@+id/text_repayment"
                        style="@style/f3_B2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:text="按月付息，到期还本" />

                    <View
                        style="@style/item_divider"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/text_earning_type"
                        style="@style/f3_B1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:text="待收收益" />

                    <TextView
                        android:id="@+id/text_earning"
                        style="@style/f3_B2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:textColor="@color/mq_r1_v2" />

                    <View
                        style="@style/item_divider"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_originproject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:layout_marginTop="5dp"
                    android:text="原产品相关信息"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/layout_originproject"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_originproject_name"
                        style="@style/f3_B1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_toLeftOf="@+id/arrow_origin"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text=""
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrow_origin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:src="@drawable/right" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@color/white">

                    <TextView
                        style="@style/f3_B1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="标的相关记录"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrow_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/tv_referrecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/arrow_detail"
                        android:text="查看详情"
                        android:textColor="@color/mq_b2_v2"
                        android:textSize="@dimen/mq_font6_v2" />


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/linear_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/arrow_detail"
                    android:layout_marginBottom="60dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_date_first"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="right"
                                android:text="3333"
                                android:textColor="@color/mq_r1_v2"
                                android:textSize="@dimen/mq_font3_v2" />

                            <TextView
                                android:id="@+id/tv_time_first"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="right"
                                android:text="3333"
                                android:textColor="@color/mq_r1_v2"
                                android:textSize="@dimen/mq_font2_v2" />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp">

                            <View
                                android:layout_width="3dp"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:background="@color/mq_b5_v2" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/process_red" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_content_first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="55555"
                            android:textColor="@color/mq_r1_v2"
                            android:textSize="@dimen/mq_font3_v2" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_click"
            style="@style/click_btn_rec"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:layout_marginTop="15dp"
            android:text="状态" />
    </LinearLayout>
</RelativeLayout>