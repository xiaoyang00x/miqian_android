<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/activity_main_top_tab" />
 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <android.support.v7.widget.RecyclerView
         android:id="@+id/recyclerview_record"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:visibility="visible" />
     <LinearLayout
         android:id="@+id/frame_no_data"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:orientation="vertical"
         android:paddingBottom="120dp"
         android:visibility="gone">


         <ImageView
             android:id="@+id/iv_data"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:background="@drawable/nodata" />

         <TextView
             android:id="@+id/tv_tips"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="5dp"
             android:text="数据获取失败，点击重新获取"
             android:textColor="@color/miqian_gray"
             android:textSize="@dimen/mq_font2" />

         <TextView
             android:id="@+id/tv_reFresh"
             android:layout_width="200dp"
             android:layout_height="35dp"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="15dp"
             android:background="@drawable/edit_selector"
             android:gravity="center"
             android:text="再试一次"
             android:textSize="@dimen/mq_font2" />

     </LinearLayout>
 </FrameLayout>



</LinearLayout>