<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     >
     <ImageView
         android:id="@+id/iv_processing"
         android:visibility="visible"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/trans"
         android:layout_alignParentRight="true"
         />
 </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_toLeftOf="@+id/image_project_status"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Q365-吧啦啦啦"
            android:textColor="@color/mq_b2_v2"
            android:textSize="@dimen/mq_font7_v2" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_date_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:text="2016-5-4认购"
            android:textColor="@color/mq_b4_v2"
            android:textSize="@dimen/mq_font2_v2" />

        <TextView
            android:id="@+id/text_date_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="2016-5-4结束"
            android:textColor="@color/mq_b4_v2"
            android:textSize="@dimen/mq_font2_v2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_left_right">

            <TextView
                android:id="@+id/text_capital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="待收本金"
                android:textColor="@color/mq_b4_v2"
                android:textSize="@dimen/mq_font3_v2" />

            <TextView
                android:id="@+id/text_capital_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="1000"
                android:textColor="@color/mq_r1_v2"
                android:textSize="@dimen/mq_font10_v2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                android:id="@+id/text_earning_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="待收收益"
                android:textColor="@color/mq_b4_v2"
                android:textSize="@dimen/mq_font3_v2" />

            <TextView
                android:id="@+id/text_earning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="12"
                android:textColor="@color/mq_r1_v2"
                android:textSize="@dimen/mq_font10_v2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                android:id="@+id/text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="年化收益"
                android:textColor="@color/mq_b4_v2"
                android:textSize="@dimen/mq_font3_v2" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_interest_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="@color/mq_r1_v2"
                    android:textSize="@dimen/mq_font10_v2" />

                <TextView
                    android:id="@+id/text_interest_rate_present"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/mq_r1_v2"
                    android:textSize="@dimen/mq_font3_v2" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>


</FrameLayout>