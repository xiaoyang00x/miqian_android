<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/account_head_bg"
            android:orientation="vertical"
            android:paddingBottom="10dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/save_step1"
                android:text="开通账户"
                android:textColor="@color/mq_b5_v2"
                android:textSize="@dimen/mq_font4_v2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:text="------------" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/save_step2"
                android:text="设置交易密码"
                android:textColor="@color/mq_b5_v2"
                android:textSize="@dimen/mq_font4_v2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:text="------------" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/save_step3"
                android:text="签署协议"
                android:textColor="@color/mq_b5_v2"
                android:textSize="@dimen/mq_font4_v2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listitem_height"
                android:background="@drawable/list_click">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:text="开户银行"
                    android:textColor="@color/mq_b1_v2"
                    android:textSize="@dimen/mq_font7_v2" />

                <TextView
                    android:id="@+id/text_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="@dimen/margin_left_right"
                    android:gravity="right"
                    android:textColor="@color/mq_b1_v2"
                    android:textSize="@dimen/mq_font7_v2" />
            </RelativeLayout>

            <View style="@style/item_divider_none" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listitem_height"
                android:background="@drawable/list_click">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:text="开户姓名"
                    android:textColor="@color/mq_b1_v2"
                    android:textSize="@dimen/mq_font7_v2" />

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="@dimen/margin_left_right"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textColor="@color/mq_b1_v2"
                    android:textSize="@dimen/mq_font7_v2" />
            </RelativeLayout>

            <View style="@style/item_divider_none" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listitem_height"
                android:background="@drawable/list_click">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:text="开户账号"
                    android:textColor="@color/mq_b1_v2"
                    android:textSize="@dimen/mq_font7_v2" />

                <TextView
                    android:id="@+id/text_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="@dimen/margin_left_right"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textColor="@color/mq_b1_v2"
                    android:textSize="@dimen/mq_font7_v2" />
            </RelativeLayout>

            <View style="@style/item_divider_none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <Button
                android:id="@+id/bt_submit"
                style="@style/click_btn"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="设置交易密码" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>