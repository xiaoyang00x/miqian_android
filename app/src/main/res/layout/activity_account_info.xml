<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_top"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/frame_name"
                style="@style/listItem"
                android:visibility="visible">

                <TextView
                    style="@style/text_black_item"
                    android:layout_centerVertical="true"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text=""
                    android:textColor="@color/mq_r1" />
            </RelativeLayout>

            <View
                android:id="@+id/divider_name"
                style="@style/item_divider"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/frame_telephone"
                style="@style/listItem">

                <TextView
                    style="@style/text_black_item"
                    android:layout_centerVertical="true"
                    android:text="手机号码" />

                <ImageView
                    android:id="@+id/arrow_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/arrow_2"
                    android:textColor="@color/miqian_gray" />
            </RelativeLayout>

            <View
                android:id="@+id/divider_bank"
                style="@style/item_divider"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/frame_bankcard"
                style="@style/listItem"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tv_bankname"
                    style="@style/text_black_item"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:text="" />

                <ImageView
                    android:id="@+id/arrow_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right" />

                <TextView
                    android:id="@+id/tv_cardnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/arrow_11"
                    android:textColor="@color/miqian_gray" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>