<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/frame_title" />

    <com.miqian.mq.views.MySwipeRefresh
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">

                    <com.dinuscxj.progressbar.CircleProgressBar
                        android:id="@+id/line_progress"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:layout_centerInParent="true"
                        app:draw_progress_text="false"
                        app:line_count="120"
                        app:line_width="12dp"
                        app:progress_end_color="@color/mq_r1_v2"
                        app:progress_shader="linear"
                        app:progress_start_color="@color/mq_r1_v2"
                        app:progress_stroke_width="2dp"
                        app:style="line" />

                    <ImageView
                        android:layout_width="185dp"
                        android:layout_height="185dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/bg_circle_progress_bar1"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_mqb_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:text="秒钱宝 第3期"
                        android:textColor="@color/mq_b1_v2"
                        android:textSize="@dimen/mq_font7_v2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_lable_year_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_mqb_title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="年化收益"
                        android:textColor="@color/mq_b4_v2"
                        android:textSize="@dimen/mq_font3_v2" />

                    <TextView
                        android:id="@+id/text_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_lable_year_interest"
                        android:layout_centerHorizontal="true"
                        android:text="5"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/mq_r1_v2"
                        android:textSize="@dimen/mq_font17_v2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/text_interest"
                        android:layout_toRightOf="@id/text_interest"
                        android:text="%"
                        android:textColor="@color/mq_r1_v2"
                        android:textSize="@dimen/mq_font8_v2" />

                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="12.5dp"
                    android:paddingRight="12.5dp"
                    android:textColor="@color/mq_bl4_v2"
                    android:textSize="@dimen/mq_font5_v2"
                    android:background="@drawable/bg_current_time"
                    android:gravity="center"
                    android:text="09月20日 09:00发售"
                    android:visibility="invisible"
                    />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="认购金额"
                            android:textColor="@color/mq_b4_v2"
                            android:textSize="@dimen/mq_font5_v2" />

                        <TextView
                            android:id="@+id/tv_subscription_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="500万"
                            android:textColor="@color/mq_b1_v2"
                            android:textSize="@dimen/mq_font10_v2"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目期限"
                            android:textColor="@color/mq_b4_v2"
                            android:textSize="@dimen/mq_font5_v2" />

                        <TextView
                            android:id="@+id/tv_project_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="活存活取"
                            android:textColor="@color/mq_b1_v2"
                            android:textSize="@dimen/mq_font10_v2"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投资人数"
                            android:textColor="@color/mq_b4_v2"
                            android:textSize="@dimen/mq_font5_v2" />

                        <TextView
                            android:id="@+id/tv_person_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="2000"
                            android:textColor="@color/mq_b1_v2"
                            android:textSize="@dimen/mq_font10_v2"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bt_investment"
                        android:layout_width="310dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="6dp"
                        android:text="立即认购"
                        android:background="@drawable/btn_red"
                        android:textColor="@color/white"
                        android:textSize="@dimen/mq_font8_v2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/icon_current_safe"
                        android:drawablePadding="5dp"
                        android:text="由融资租赁机构提供安全保障，安全透明值得认购"
                        android:textColor="@color/mq_b4_v2"
                        android:textSize="@dimen/mq_font2_v2" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.miqian.mq.views.MySwipeRefresh>


</LinearLayout>