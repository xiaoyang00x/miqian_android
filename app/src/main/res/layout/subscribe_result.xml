<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/account_head_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_status"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/result_success"
                android:text="认购申请成功"
                android:textColor="@color/white"
                android:textSize="@dimen/mq_font7_v2"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/save_wave" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item">

            <TextView
                style="@style/f7_B1_V2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:text="认购申请金额" />

            <TextView
                android:id="@+id/text_money_unit"
                style="@style/f8_R1_V2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_right"
                android:text="元"
                android:textSize="@dimen/mq_font6_v2" />

            <TextView
                android:id="@+id/text_money"
                style="@style/f8_R1_V2"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/text_money_unit"
                android:text="--" />

            <View
                style="@style/item_divider_none"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_balance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item">

            <TextView
                style="@style/f7_B1_V2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:text="余额支付" />

            <TextView
                android:id="@+id/text_money_unit2"
                style="@style/f8_R1_V2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_right"
                android:text="元"
                android:textSize="@dimen/mq_font6_v2" />

            <TextView
                android:id="@+id/text_pay_money"
                style="@style/f8_R1_V2"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/text_money_unit2"
                android:text="--" />

            <View
                style="@style/item_divider_none"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/frame_promote"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item">

            <TextView
                style="@style/f7_B1_V2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:text="使用红包/卡" />

            <TextView
                android:id="@+id/text_promote"
                style="@style/f7_B1_V2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_right" />

            <View
                style="@style/item_divider_none"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_error"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:visibility="gone">

            <TextView
                style="@style/f7_B1_V2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:text="失败原因" />

            <TextView
                android:id="@+id/text_error"
                style="@style/f8_R1_V2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_right"
                android:textSize="@dimen/mq_font6_v2" />

            <View
                style="@style/item_divider_none"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/frame_trade_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item">

            <TextView
                style="@style/f7_B1_V2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:text="业务编号" />

            <TextView
                android:id="@+id/trade_number"
                style="@style/f7_B1_V2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_right" />

            <View
                style="@style/item_divider_none"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <TextView
            android:id="@id/text_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="@color/mq_r1_v2"
            android:textSize="@dimen/mq_font3_v2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/bt_back"
                style="@style/click_btn"
                android:text="继续认购" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/bt_my_product"
                style="@style/click_btn"
                android:background="@drawable/btn_sendcaptcha"
                android:text="前往我的秒钱宝"
                android:textColor="@color/mq_r1_v2" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>